const Order = require('../models/Order');

// Crear orden (compra)
exports.createOrder = async (req, res) => {
    try {
        const { productos, total, direccion, telefonoPago } = req.body;
        const userId = req.user.id;

        const order = new Order({
            user: userId,
            productos,
            total,
            direccion,
            telefonoPago,
            fecha: new Date()
        });

        await order.save();
        res.status(201).json({ msg: 'Orden registrada', order });
    } catch (error) {
        res.status(500).json({ error: error.message });
    }
};

// Listar compras de un usuario
exports.getUserOrders = async (req, res) => {
    const userId = req.user.id;
    const orders = await Order.find({ user: userId }).populate('productos.producto');
    res.json(orders);
};
